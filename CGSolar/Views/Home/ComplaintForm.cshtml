<div>
    <div class="panel panel-default z-depth-3" style="background-color:teal;">
        <div class="panel-heading" style="background-color:transparent">
            <h2 style="color:white"><b>Complaint Form</b></h2>
        </div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-2" style="color:white">Work Order: </label>
                    <div class="col-sm-4">
                        <input class="form-control" type="text" placeholder="Please Enter Work Order No." />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="color:white">System Capacity: </label>
                    <div class="col-sm-4">
                        <input class="form-control" type="text" placeholder="Please Enter System Capacity" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="color:white">Beneficiary Name: </label>
                    <div class="col-sm-4">
                        <input class="form-control" type="text" placeholder="Please Enter Beneficiary Name" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="color:white">Contact Name: </label>
                    <div class="col-sm-4">
                        <input class="form-control" type="text" placeholder="Please Enter Contact Name" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="color:white">Village: </label>
                    <div class="col-sm-4">
                        <input class="form-control" type="text" placeholder="Please Enter Village Name" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="color:white">Block: </label>
                    <div class="col-sm-4">
                        <input class="form-control" type="text" placeholder="Please Enter Block No." />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="color:white">District: </label>
                    <div class="col-sm-4">
                        <input class="form-control" type="text" placeholder="Please Enter District" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="color:white">Problem Reported Date: </label>
                    <div class="col-sm-4">
                        <input id="reportDate" class="form-control" type="text" placeholder="Please Select Date" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="color:white">Problem Description: </label>
                    <div class="col-sm-4">
                        <textarea class="form-control" placeholder="Please Enter Problem Description"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="color:white">Field Assistant: </label>
                    <div class="col-sm-4">
                        <select class="form-control">
                            <option>User 1</option>
                            <option>User 2</option>
                            <option>User 3</option>
                            <option>User 4</option>
                            <option>User 5</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-2">
                        <button class="form-control btn-success" type="submit">
                            Submit
                        </button>
                    </div>
                </div>
            </form>
        </div>


    </div>
</div>


<script>
    $('#reportDate').datepicker();
</script>